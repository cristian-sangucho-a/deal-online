---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  color?: string;
}

const { size = 'md', color = 'text-primary-500' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class={`animate-spin rounded-full border-2 border-gray-300 border-t-current ${sizeClasses[size]} ${color}`}></div>